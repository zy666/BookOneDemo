<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/tv_animator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="属性动画" />

        <TextView
            android:id="@+id/tv_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.danny.bookone.highLight.DragView
            android:id="@+id/btn_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="15dp"
            android:text="滑动的6种方式"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <com.danny.bookone.highLight.MyLayoutView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.danny.bookone.highLight.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="wwww"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <com.danny.bookone.highLight.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="wwww"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

        </com.danny.bookone.highLight.MyLayoutView>

        <com.danny.bookone.highLight.SplitTextViewLayout
            android:id="@+id/tv_split"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <data>

    </data>
</layout>